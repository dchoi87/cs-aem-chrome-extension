{
  "manifest_version": 3,
  "name": "Cedars-Sinai AEM Extension",
  "version": "1.0.2",
  "description": "Utility extension for navigating AEM Pages",
  "action": {
    "default_title": "Cedars-Sinai AEM Extension",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "icons": {
    "128": "public/icon128.png"
  },
  "permissions": ["tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"]
    }
  ]
}
